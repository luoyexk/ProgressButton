<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <declare-styleable name="LoadingButton">
        <attr name="colorBackgroundLoading" format="color"/>
        <attr name="colorBackground" format="color"/>
        <attr name="colorProgressBar" format="color"/>
        <attr name="colorProgressBackground" format="color"/>
        <attr name="progressHeight" format="dimension"/>
        <attr name="progressWidth" format="dimension"/>
        <attr name="progressDuration" format="integer"/>
    </declare-styleable>
</resources>
